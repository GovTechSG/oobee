{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2021",
    "module": "nodenext",
    "rootDir": "./src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
  },
  "types": ["cypress"],
  "include": ["./src/**/*" , "demo-cypress-project/cypress.d.ts"],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
