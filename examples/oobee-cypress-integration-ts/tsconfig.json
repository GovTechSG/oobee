{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2021",
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "rootDir": "./src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "types": ["cypress"],
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "cypress.d.ts"],
  "exclude": ["node_modules"]
}